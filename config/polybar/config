# vim:filetype=dosini
[colors]
bg = #1d2021
tbg = #e51d2021
fg = #ebdbb2
focused = #285577
visible = #5f676a
urgent = #900000
alert = #fabd2f

[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/base]
width = 100%
height = 27
bottom = true
radius = 0.0
fixed-center = false

background = ${colors.tbg}
foreground = ${colors.fg}

line-size = 3

border-size = 0

separator = |

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

; TODO jprokop: add those new fonts + Noto/Noto Emoji to my .files
font-0 = "Fantasque Sans Mono:size=12;3"
font-1 = "Material Icons:size=12;4"
font-2 = "Font Awesome:size=11;3"

[bar/main-jprokop-nuc]
inherit = bar/base
modules-left = i3
modules-center = 
modules-right = volume date menu

tray-position = right
tray-padding = 2

[bar/main-jprokop-tp13]
monitor = ${env:MONITOR}
inherit = bar/base
modules-left = i3
modules-center = 
modules-right = wifi battery volume date menu

tray-position = right
tray-padding = 2

[bar/left-jprokop-tp13]
monitor = ${env:MONITOR}
inherit = bar/base
modules-left = 
modules-center = 
modules-right = i3

[bar/main-jprokop]
monitor = DP1
inherit = bar/base
modules-left = i3
modules-center = 
modules-right = volume date menu

height = 26

tray-position = right
tray-padding = 2

[bar/left-jprokop]
monitor = VGA1
inherit = bar/base
modules-left = 
modules-center = 
modules-right = i3

[bar/right-jprokop]
monitor = HDMI2
inherit = bar/base
modules-left = i3
modules-center = 
modules-right = 

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
enable-scroll = false
enable-click = false
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.fg}
label-mode-background = ${colors.tbg}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-padding = 1
label-focused-foreground = ${colors.fg}
label-focused-underline = ${colors.focused}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-padding = 1
label-visible-foreground = ${colors.fg}
label-visible-underline = ${colors.visible}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-padding = 1
label-urgent-foreground = ${colors.fg}
label-urgent-underline = ${colors.urgent}

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 15.0
format-connected = <label-connected> <ramp-signal>
format-disconnected = <label-disconnected>
label-connected = %downspeed% %upspeed% [%essid%]
label-connected-foreground = #666
ramp-signal-foreground= #666
ramp-signal-0 = 0%
ramp-signal-1 = ~20%
ramp-signal-2 = ~40%
ramp-signal-3 = ~60%
ramp-signal-4 = ~80%
ramp-signal-5 = ~100%
label-disconnected = 

[module/battery]
type = internal/battery
full-at = 99
battery = BAT1
adapter = ADP1
poll-interval = 30
time-format = %H:%M
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging = %percentage%% (%time%)
label-discharging = %percentage%% (%time%)
label-full =  
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume = "%percentage%%"
label-volume-foreground = ${root.foreground}

format-muted = <label-muted>
label-muted = "%percentage%%"
format-muted-foreground = ${colors.alert}

[module/date]
type = internal/date
interval = 1
date = %a %d %b,
time = %H:%M
date-alt = %Y-%m-%d
time-alt = %H:%M:%S
label = %date% %time%

[module/menu]
type = custom/menu

label-open = " "
label-close = "× "

; Restart
menu-0-0 = ""
menu-0-0-exec = sudo reboot

; Power off
menu-0-1 = "  "
menu-0-1-exec = sudo poweroff

; Redshift toggle
menu-0-2 = " "
menu-0-2-exec = kill -SIGUSR1 `pgrep ^redshift$`
